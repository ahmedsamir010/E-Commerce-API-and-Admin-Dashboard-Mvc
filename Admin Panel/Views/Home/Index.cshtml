@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Custom styles for the home page */
    body {
        background-color: #f8f9fa;
    }

    .welcome-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .card {
        border-radius: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin-top: 30px;
    }

    .card-header {
        background-color: #007bff;
        color: #fff;
        border-radius: 20px 20px 0 0;
        font-size: 24px;
        font-weight: bold;
        padding: 20px;
        text-align: center;
    }

    .card-body {
        padding: 30px;
    }

    .avatar-container {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        width: 150px;
        margin-right: 10px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        width: 150px;
    }

        .btn-danger:hover {
            background-color: #b82a37;
        }
</style>

<div class="container welcome-container">
    <div class="card">
        <div class="card-header">
            <h1 class="display-4">Welcome @User.Identity?.Name!</h1>
        </div>
        <div class="card-body text-center">
            <p class="lead">You are now logged in as an admin.</p>
        </div>
    </div>
</div>
