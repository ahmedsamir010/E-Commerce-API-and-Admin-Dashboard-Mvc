@model IEnumerable<ProductType>


<div class="d-flex justify-content-between align-items-center">
    <h1>Product Types</h1>

    <p class="mt-2">
        <a class="btn btn-primary" asp-controller="Type" asp-action="Create">Create New</a>
    </p>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Type in Model)
        {
            <tr>
                <td>@Type.Name</td>
                <td>
                    <a class="btn btn-outline-warning" asp-controller="Type" asp-action="Update" asp-route-id="@Type.Id">Edit</a>
                    <a class="btn btn-outline-danger m-1" asp-controller="Type" asp-action="Delete" asp-route-id="@Type.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>